{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Project Schema for Build only",
    "properties": {
        "ProjectName": {
            "type": "string"
        },
        "Description": {
            "type": "string"
        },
        "Version": {
            "type": "string"
        },
        "ResourceCopyMode": {
            "type": "string"
        },
        "Manifest": {
            "type": "object",
            "properties": {
                "Author": {
                    "type": "string"
                },
                "PowerShellHostVersion": {
                    "type": "string"
                },
                "GUID": {
                    "type": "string"
                },
                "Tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "ProjectUri": {
                    "type": "string"
                }
            },
            "required": [
                "Author",
                "PowerShellHostVersion",
                "GUID"
            ]
        }
    },
    "required": [
        "ProjectName",
        "Description",
        "Version",
        "Manifest"
    ]
}